 {
   if (!sSingleton) {
+    // configure sqlite3
+    int rc = ::sqlite3_config(SQLITE_CONFIG_MALLOC, &memMethods);
+    NS_ASSERTION(rc == SQLITE_OK, "Can't configure sqlite!");
+
     sSingleton = new EmbedLiteApp();
     NS_ASSERTION(sSingleton, "not initialized");
   }
